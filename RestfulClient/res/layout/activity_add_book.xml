<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddBookActivity" >

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/editText_Nazwa"
        android:layout_alignBottom="@+id/editText_Nazwa"
        android:layout_alignParentLeft="true"
        android:text="@string/name" />


    

        
        <Button
            android:id="@+id/bSend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:text="@string/dodaj"
            android:onClick="b_Click" />

        <EditText
            android:id="@+id/editText_Nazwa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/editText_ISBN"
            android:layout_below="@+id/textView1"
            android:layout_marginTop="18dp"
            android:inputType="text"
            android:ems="10" >

            <requestFocus />
        </EditText>

        <EditText
            android:id="@+id/editText_ISBN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/textView1"
            android:inputType="text"
            android:ems="10" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/editText_ISBN"
            android:layout_alignBottom="@+id/editText_ISBN"
            android:layout_alignParentLeft="true"
            android:text="@string/isbn" />

</RelativeLayout>